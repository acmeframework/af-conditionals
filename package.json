{
    "name": "af-conditionals",
    "version": "1.0.0",
    "description": "A simple conditional library.",
    "main": "dist/lib/index.js",
    "scripts": {
        "dist": "npm test && ./node_modules/.bin/tsc",
        "test": "./node_modules/.bin/nyc ./node_modules/.bin/mocha",
        "coverage": "./node_modules/.bin/nyc report --reporter=text-lcov | coveralls"
    },
    "files": [
        "dist"
    ],
    "nyc": {
        "include": [
            "src"
        ],
        "extension": [
            ".ts",
            ".tsx"
        ],
        "reporter": [
            "html",
            "lcov"
        ],
        "all": true,
        "report-dir": "./reports/coverage"
    },
    "author": "Michael Coakley <mcoakley@acmeframework.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/acmeframework/af-conditionals"
    },
    "bugs": {
        "url": "https://github.com/acmeframework/af-conditionals/issues"
    },
    "homepage": "https://github.com/acmeframework/af-conditionals",
    "license": "MIT",
    "dependencies": {
        "type-detect": "^4.0.8"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.6",
        "@types/node": "^10.12.26",
        "@types/sinon": "^7.0.6",
        "@types/type-detect": "^4.0.1",
        "chai": "^4.2.0",
        "coveralls": "^3.0.2",
        "mocha": "^5.2.0",
        "mochawesome": "^3.1.1",
        "nyc": "^13.3.0",
        "sinon": "^7.2.3",
        "source-map-support": "^0.5.10",
        "ts-node": "^8.0.2",
        "tslint": "^5.12.1",
        "typescript": "^3.3.3"
    }
}
